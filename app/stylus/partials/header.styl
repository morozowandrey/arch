//////////////////////////////////// ADAPTIVE //////////////////////////////////////

@media screen and (max-width: 1000px) {

  .header-nav-box {
    margin 0
    float none
  }

  .header-nav {
    display: none;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
  }

  .header-nav__item {
    font-size: 16px;
    min-width 150px
    display block
    margin: 0 auto;
  }

  .header-nav-mobile_close, .header-nav-mobile_open {
    margin-top: 15px;
    margin-right: 20px;
  }

  .header-nav-mobile_open {
    display inherit
  }

  .header-nav__item:first-of-type {
    // margin-top: 70px;
  }
  .header-nav__item, .header-nav__item_current {
      padding: 0;
  }
}

@media screen and (max-width: 360px) {

  .header-nav__item, .header-nav__item_current {
    padding: 35px 10px 8px;
    font-size: 14px;
  }
}
@media screen and (max-height: 500px) {

  .header-nav__item, .header-nav__item_current {
    padding: 20px 10px 8px;
  }
}