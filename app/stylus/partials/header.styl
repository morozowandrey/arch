.header {
  width 100%
  position: absolute;
  z-index: 20;
  margin-bottom 50px;
  background-color: white;

  &-nav-box {
    float: right;
    vertical-align middle
    margin-right 20px
    position relative
  }

  &-nav {
    font-size 0
    width: 100%;
    box-shadow: none;

    &__item, &__item_current {
      padding: 35px 15px 16px;
      color: mainBlack;
      text-transform: uppercase;
      font-size: 12px;
      max-width: 300px;
      position: relative;
      top: 10px;
    }

    &__item:hover, &__item_current {
      background-color: mainBlack;
      color: white;
      font-weight: bold;
      font-family mediumff;
    }

    &__item_current {
      background-color: mainRed;
    }

    &__item:last-of-type {
      margin-bottom 50px
    }

    &-mobile_open {
      display none
    }

    &-mobile_close, &-mobile_open {
       float: right;
       color: mainBlack;
        position: relative;
        z-index: 100;
     }
  }

  &-logo {
    padding-top 20px
    margin-left 20px
    margin-bottom: 5px;
    float: left;
    vertical-align middle
    line-height: 0;

    &__link {}

    &__img {}
  }
}

.header-nav.visible {
  display: inline-block;
  text-align center
}

.header-nav-mobile_open.hidden {
  display: none;
}

.fixed-nav {
  position: fixed;
  width: 100%;
  top: 0;
  z-index: 100;
}

