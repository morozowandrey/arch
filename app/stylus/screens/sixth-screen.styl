.sixth-screen {
  overflow-x hidden

  .owner {

    &__name {
      margin-bottom 40px !important
    }

    &-info {
      margin-top: 100px;
      margin-bottom: 100px;
      position relative

      &__img {
        float: left;
      }
      &-content {
        background-color: white;
        margin-left: -2px;

        &-box {
          display inline-block
          max-width 560px
        }

        &__text1, &__text, &__text3 {
          margin-bottom 30px
          padding-right 90px
        }
        &__text2 {
          margin-bottom 30px
        }
        &__text3 {
          padding-bottom 90px
          margin 0
        }
      }

      &-exp {

      }
    }

    &-info:before {
      content: '';
      background-image: url(../images/pattern.png);
      height: 88%;
      width: 1000%;
      position: absolute;
      top: 12%;
      right: -932%;
      z-index: -1;
    }

    .bold-heading_massive {
      font-size 40px
    }
  }

  .exp-progects, .exp-company {
    display inline-block
    background-color: white;
    margin-left: -2px;

    &__caption{
      margin-bottom: 60px;
      max-width: 200px;
      position relative
      padding-left: 20px;
    }

    &__caption:before {
      content: '';
      height: 35px;
      width: 5px;
      background-color: #ff0006;
      position: absolute;
      left: 0;
      top: 5px;
    }
  }

  .exp-company {
    background-color transparent

    &__caption{}
  }

  .plan-heading {
    margin-left: 10px;
  }

  .bold-heading_massive {
    margin 0
  }
}

///////////////////////////////////////////////////////////////////////////
//ADAPTIVE

@media screen and (max-width: 1200px) {
  .owner-info {
    margin-left 20px
  }
}

@media screen and (max-width: 960px) {
  .sixth-screen .owner-info-content-box {
    max-width: 360px;
  }

  .sixth-screen .exp-progects__caption, .sixth-screen .exp-company__caption {
    max-width: 165px;
  }
}

@media screen and (max-width: 768px) {
  .sixth-screen .owner-info {
    text-align: center;
  }

  .sixth-screen .owner-info__img {
    float: none;
    display: inline-block;
  }

  .sixth-screen .owner-info-content-box {
    max-width: 100%;
  }

  .sixth-screen .owner-info-content {
    display: none;
  }

  .sixth-screen .owner-info-content-box {
    display: block !important;
  }

