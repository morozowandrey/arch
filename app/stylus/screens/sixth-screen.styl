  .sixth-screen .owner-info:before {
    right: -900%;
  }
}

@media screen and (max-width: 500px) {
  .owner-info {
    margin-left: 0px;
  }
}
@media screen and (max-width: 360px) {
  .sixth-screen .exp-progects__caption, .sixth-screen .exp-company__caption {
    max-width: 100%;
    margin-bottom: 30px;
  }

  .sixth-screen .exp-progects, .sixth-screen .exp-company {
    width: 100%;
  }

  .sixth-screen .exp-progects__caption:before, .sixth-screen .exp-company__caption:before {
    left: 25px;
    top: -5px;
  }

  .sixth-screen .owner-info-exp {
    margin-top -6px
  }
}