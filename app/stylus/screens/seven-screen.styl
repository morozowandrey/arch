.seven-screen {
  background-image url("../images/contacts-bg.jpg")
  text-align center

  .contacts {
    background-image url("../images/contacts-bg.jpg")
    margin-bottom 150px
    margin-top 200px
    max-width 645px
    display inline-block
    text-align: left;
    position: relative;
    z-index: 5;

    &-box {
      position relative
    }

    &-box:before {
      content: '';
      background-image: url(../images/pattern.png);
      height: 70%;
      width: 1000%;
      position: absolute;
      top: 14%;
      left: -902%;
      z-index: 0;
    }

    &__mail {
      color mainRed
      font-size 50px
    }
    &__tel {
      margin-bottom 10px
      margin-left 100px
    }
    &__tel:last-of-type {
      padding-bottom 90px
    }
    &-copyright {}
  }

  .common-text {
    display inline-block
    margin-left 30px
  }
  .common-text:first-of-type {
    margin-left 0px
  }

  .bold-heading {
    margin-bottom 50px
    margin-top 90px
    margin-left 100px
  }

  .bold-heading_massive {
    text-transform uppercase
    margin-bottom 50px
    margin-left 100px
    margin-right 100px
    font-size 40px
  }
}


///////////////////////////////////////////////////////////////////////////
//ADAPTIVE

@media screen and (max-width: 660px) {
  .seven-screen .bold-heading {
    margin-top: 50px;
    margin-left 40px
    margin-bottom:40px;
  }
  .seven-screen .bold-heading_massive {
    margin-bottom: 30px;
    margin-left: 40px;
    margin-right: 40px;
    font-size 21px
  }
  .seven-screen .contacts__tel:last-of-type {
    padding-bottom: 40px;
  }
  .seven-screen .contacts__tel {
    margin-left: 40px;
  }
  .seven-screen .contacts__mail {
    font-size: 30px;
  }
}